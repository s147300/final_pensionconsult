<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jonathanlarsen.pensionconsultmainpage.NewsActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="96dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pensionconsultlogo" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="199dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Information omkring uvildig pensions rådgivning på et forstående sprog for unge, uvidende og uinteresserede brugere. Evt. en kort forklaring om Lars, hans virksomhed og måske lidt ekstra hvis der er plads og lyst. Nu nærmer vi os at jeg bare skriver fyld-tekst for at se hvordan appen ser ud. Det kan godt virke ligegyldigt men det er det ikke! Ha"
        android:textColor="?android:attr/textColorHint"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.379"
        tools:ignore="Deprecated" />
</android.support.constraint.ConstraintLayout>
